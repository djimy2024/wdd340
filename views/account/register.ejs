<main class="register-form">
  <h1><%= title %></h1>

  <%/* if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } */%>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
  
<form id="registerForm" action="/account/register" method="post" novalidate>
  <p>ALL FIELDS ARE REQUIRED.</p>
  <fieldset>
    <label for="firstname">First name:</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">

    <label for="lastname">Last name:</label>
    <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">

    <label for="email">Email Address:</label>
    <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email %>">

    <label for="password">Password:</label>
    <input
      type="password"
      name="account_password"
      id="password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />

    <div><button type="button" id="pswdBtn" class="show-password-btn">Show Password</button>
</div>
    <span>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</span><br><br>

    <button type="submit">Register</button>
  </fieldset>
</form>
<script src="/js/password.js"></script>

</main>
